$('#choice-box-<%= @choice.id %>').addClass('voted');
<% @question.choices.each do |choice| %>
 $('#choice-box-<%= choice.id %> .count').text('<%= choice.votes.length %> votes');
 $('#choice-box-<%= choice.id %> a').removeAttr("href").removeAttr('data-method').removeAttr("data-remote");
<% end %>
$('#question-box-<%= @question.id %>').append('<%= link_to "Show Comments", question_comments_path(@question), remote: true, id: "show-comments-link-#{@question.id}" %>')
$('#progressbar-<%= @question.id %> .ui-progressbar-value').attr("style", "width: <%= @question.percent %>%;")
